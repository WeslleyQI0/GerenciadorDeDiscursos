<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.CongregacoesFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/toolbar_pincipal" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_congregaçoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="55dp" />

        <ImageView
            android:id="@+id/img_congregacoes_empty"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/img_congregacao"
            android:visibility="gone" />

        <TextView
            android:id="@+id/msg_img_congregacoes_empty_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_congregacoes_empty"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp"
            android:text="Ainda não há Congregações cadastradas!"
            android:textSize="18sp"
            android:textStyle="italic"
            android:visibility="gone" />

    </RelativeLayout>


</FrameLayout>