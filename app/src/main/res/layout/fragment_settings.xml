<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_cadastro_gradiente">

        <include layout="@layout/toolbar_pincipal" />

        <Button
            android:id="@+id/bt_deslogar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_above="@id/bt_configuracoes"
            android:background="@drawable/background_button_cadastro"
            android:text="Deslogar"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/bt_configuracoes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:background="#ff0900"
            android:text="Configurações"
            android:textColor="@color/white" />

    </RelativeLayout>

</FrameLayout>